@model IEnumerable<ImageUploadProject.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@Html.Raw(TempData["CreateMessage"])

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Profile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Profile)*@
                @*<img src="@Url.Content(modelItem => item.Profile)" alt="Image" height="50" width="50" />   *@
              
                <img src="~/Image/@item.Profile" height="70px" width="110px" />   

            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details"  class="btn btn-warning" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
